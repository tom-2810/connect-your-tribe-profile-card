<%- include('./partials/head') %>

  <div class="card">
    <div id="personal-card">
      <header>
        <section class="name">
          <h1>
            <%= member.name %>
              <%= member.surname %>
          </h1>
          <h2>@<%= member.nickname %>
          </h2>
        </section>
        <div class="profile-image">
          <img src="<%= member.avatar %>" alt="">
          <p class="emoji">ðŸ‘‹</p>
        </div>
      </header>

      <main>
        <section id="github">
          <h3>GitHub</h3>
          <div class="block">
            <img src="images/github_icon.png" alt="">
            <p>
              <%= member.gitHubHandle %>
            </p>
            <a href="https://github.com/<%= member.gitHubHandle %>">
              <p>Visit</p>
            </a>
          </div>
        </section>

        <section id="bio">
          <h3>Bio</h3>
          <div class="block">
            <p>
              <%= member.bio %>
            </p>
          </div>
        </section>
      </main>


      <footer>
        <img src="images/svg/fake-qr-code.svg" alt="">
        <div class="links">
          <!-- <a href="">
            <img src="images/svg/linkedin.svg" alt="">
          </a> -->
          <a href="mailto:<%= member.name %>.<%= member.surname %>@hva.nl">
            <img src="images/svg/mail.svg" alt="">
          </a>
        </div>
      </footer>

    </div>

    <div id="backdrop-card"></div>
  </div>


  <%- include('./partials/foot') %>